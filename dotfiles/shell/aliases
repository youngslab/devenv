# ls aliases
alias ll='ls -alF --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias ls='ls --color=auto'

# search1
alias f='find . | grep --color=auto -i'
alias g='grep --color=auto -nirEI'

# git shortcuts
alias gs='git status -s'
alias gl='git log --oneline --graph --all'
alias gd='git diff'
alias gb='git branch -a'

# directory jump (z plugin)
alias j='z'

# nvim
alias vim='nvim'
alias vi='nvim'
alias v='nvim'

#cd shortcuts
alias c='cd ..'
alias cc='cd ../..'
alias ccc='cd ../../..'
alias cccc='cd ../../../..'
alias ccccc='cd ../../../../..'

# resourcebot shortucts
# Depends on resourcebot_cli projects
alias list="resourcebot list"
alias claim="resourcebot claim"
alias release="resourcebot release"
alias target="resourcebot target"
alias tester="resourcebot tester"
